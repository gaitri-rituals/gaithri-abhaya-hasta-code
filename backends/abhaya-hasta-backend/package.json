{
  "name": "abhaya-hasta-backend",
  "version": "1.0.0",
  "description": "Backend for Abhaya Hasta temple booking system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:test-db": "docker compose -f docker-compose.test.yml up -d",
    "docker:test-db:stop": "docker compose -f docker-compose.test.yml down",
    "setup-test-db": "node scripts/setup-test-db.js",
    "pretest": "npm run docker:test-db && sleep 10 && npm run setup-test-db",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "posttest": "npm run docker:test-db:stop",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^4.2.1",
    "pg": "^8.10.0",
    "razorpay": "^2.8.6",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
